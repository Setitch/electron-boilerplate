{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/app/components/ui/*"],
      "@consts/*": ["./src/consts/*"],
      "@providers/*": ["src/app/providers/*"],
      "@types/*": ["./src/@types/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/@types/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vite"
  ]
}
